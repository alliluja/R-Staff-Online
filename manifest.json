{
    "manifest_version": 2,
 
    "name": "R-Style Staff OnLine",
    "description": "Кто на работе, остаток траффика",
    "version": "1.2.5",
 
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "http://atlant/",
        "http://inetstat/",
        "storage"
    ],
    
    "background": {
        "scripts": ["background.js"]
    },
    "applications": {
      "gecko": {
        "update_url": "https://github.com/alliluja/R-Staff-Online/blob/self-hosted-version/updates.json"
      }
    }
}